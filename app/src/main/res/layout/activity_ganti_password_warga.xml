<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.apps_covidrt.warga.gantipassword.GantiPasswordWargaActivity"
    android:background="@color/BaseBackgroundDaftar">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Ganti Password"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/TextColor"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password Lama"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_background_edittext_daftar"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"
                    android:inputType="textPassword"
                    android:textAlignment="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Password Baru"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_background_edittext_daftar"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"
                    android:inputType="textPassword"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Ulangi Password Baru"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"/>

                <EditText
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_background_edittext_daftar"
                    android:textSize="15sp"
                    android:textColor="@color/TextColor"
                    android:inputType="textPassword"
                    android:textAlignment="center"/>

            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="320dp"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:text="Ubah Password"
                    android:background="@drawable/shape_background_edittext_daftar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="39dp"
                    android:textSize="15sp"
                    android:textAllCaps="false"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>