<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rt.laporankesejahteraan.LaporanKesejahteraanActivity"
    android:background="@color/BaseBackgroundDaftar">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_laporan_kesehatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Laporan Kesejahteraan Warga"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/TextColor"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_kesejahteraan_text_penghasilan"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Berdasarkan Penghasilan Perbulan"
                android:textColor="@color/TextColor"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/table_penghasilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="3"
                        android:background="#fff">

                        <TableRow>

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Penghasilan Perbulan"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Jumlah Warga"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_penghasilan_no"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="1\n2\n3\n4"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_penghasilan_perbulan"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/TextColor"
                                android:text="@string/rp_2_500_000_n_rp_2_500_000_rp_4_000_000_n_rp_4_000_000_rp_6_000_000_n_rp_6_000_000"
                                android:textAlignment="textStart"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_penghasilan"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="17\n35\n23\n9"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:layout_span="2"
                                android:textColor="@color/TextColor"
                                android:paddingLeft="10dp"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_penghasilan_total"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/TextColor"
                                android:background="@drawable/tabel"
                                android:textAlignment="center"/>

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_kesejahteraan_text_pekerjaan"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Berdasarkan Status Pekerjaan"
                android:textColor="@color/TextColor"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/table_pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="3"
                        android:background="#fff">

                        <TableRow>

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Status Pekerjaan"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Jumlah Warga"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_pekerjaan_no"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="1\n2\n3"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_pekerjaan_perbulan"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="  Terkena PHK\n  Memiliki Usaha\n  Bekerja"
                                android:textColor="@color/TextColor"
                                android:textAlignment="textStart"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_kesejahteraan_pekerjaan"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="8\n27\n49"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_kesejahteraan_text_namawarga"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Daftar Nama Calon Warga Mendapat Bantuan"
                android:textColor="@color/TextColor"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/table_calon_bantuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="6"
                        android:background="#fff">

                        <TableRow>

                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="NIK"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Nama"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Jenis Kelamin"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Lahir"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="Alamat"
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/tv_bantuan_nomer"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_bantuan_nik"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="textStart"
                                android:background="@drawable/tabel"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"/>

                            <TextView
                                android:id="@+id/tv_bantuan_nama"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="textStart"
                                android:background="@drawable/tabel"
                                android:paddingRight="10dp"
                                android:paddingLeft="10dp"/>

                            <TextView
                                android:id="@+id/tv_bantuan_jk"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_bantuan_ttl"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                            <TextView
                                android:id="@+id/tv_bantuan_alamat"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/TextColor"
                                android:textAlignment="center"
                                android:background="@drawable/tabel"/>

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_kesejahteraan_download"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:background="@drawable/shape_background_edittext_daftar"
                    android:text="Download"
                    android:textColor="@color/TextColor"
                    android:layout_marginTop="50dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>