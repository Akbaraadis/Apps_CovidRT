<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center"
    android:background="@color/BaseBackgroundDaftar"
    android:orientation="vertical">

    <ImageView
        android:layout_width="112dp"
        android:layout_height="105dp"
        android:src="@drawable/covid"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIAGA COVID-19"
        android:textColor="@color/TextColor"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="email"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=" : "
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_background_edittext_daftar"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="password"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=" : "
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_background_edittext_daftar"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textSize="15sp"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="Status"
                android:textColor="@color/TextColor"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=" : "
                android:textSize="15sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/sp_login_status"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_background_edittext_daftar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Belum punya akun?"
                android:textColor="@color/TextColor"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_login_daftar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="  Daftar disini"
                android:textSize="12sp"
                android:textColor="#EF2C56"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_background_edittext_daftar"
                android:text="Masuk"
                android:textStyle="normal"/>

        </LinearLayout>

</LinearLayout>