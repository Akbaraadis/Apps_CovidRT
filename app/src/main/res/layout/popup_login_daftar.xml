<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/shape_background_eclipse"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_popup_daftar_rt"
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:src="@drawable/icon_profile"/>

        <TextView
            android:id="@+id/tv_popup_daftar_rt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Ketua RT"
            android:textColor="#1B36E0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_popup_daftar_warga"
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:src="@drawable/icon_profile"/>

        <TextView
            android:id="@+id/tv_popup_daftar_warga"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Warga"
            android:textColor="#1B36E0"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>